{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "react-jsx",

    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    "useDefineForClassFields": false,
    "experimentalDecorators": true,

    "allowJs": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
